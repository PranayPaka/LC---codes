class Solution {
    public int findClosestNumber(int[] nums) {
        int n = nums.length;

        int[] dist = new int[n];
        for (int i = 0; i < n; i++) {
            dist[i] = Math.abs(nums[i]); 
        }

        int min = dist[0];
        int ans = nums[0]; 

        for (int i = 1; i < n; i++) {
            if (dist[i] < min) {
                min = dist[i];
                ans = nums[i];
            }
            else if (dist[i] == min && nums[i] > ans) {
                ans = nums[i];
            }
        }

        return ans;
    }
}
