class Solution {
    public int returnToBoundaryCount(int[] nums) {
        int n = nums.length;
        int[] prefix = new int[n];

        int count = 0;

        prefix[0] = nums[0];
        if (prefix[0] == 0) count++;

        for (int i = 1; i < n; i++) {
            prefix[i] = prefix[i - 1] + nums[i];

            if (prefix[i] == 0) {
                count++;
            }
        }

        return count;
    }
}
